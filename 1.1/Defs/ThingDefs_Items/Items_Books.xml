<Defs>

  <ThingDef ParentName="ResourceBase" Name="VBE_BookBase" Abstract="True">
    <description>A book with a hard cover.</description>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
	<thingClass>VanillaBooksExpanded.Book</thingClass>
	<tickerType>Normal</tickerType>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
		<MaxHitPoints>100</MaxHitPoints>
		<WorkToMake>33400</WorkToMake>
		<Mass>0.5</Mass>
		<Beauty>5</Beauty>
		<Flammability>1.0</Flammability>
    </statBases>
    <stackLimit>1</stackLimit>
    <thingCategories>
      <li>VBE_Books</li>
    </thingCategories>
    <inspectorTabs>
      <li>VanillaBooksExpanded.ITab_Book</li>
    </inspectorTabs>
    <tradeTags>
      <li>Book</li>
    </tradeTags>
    <costList>
		<Cloth>75</Cloth>
    </costList>
    <recipeMaker>
      <workSpeedStat>ResearchSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <unfinishedThingDef>VBE_UnfinishedBook</unfinishedThingDef>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>VBE_WritersTable</li>
		<li>VBE_TypewritersTable</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>
  
