<Defs>

  <ThingDef ParentName="ResourceBase" Name="VBE_BookBase" Abstract="True">
    <description>A book with a hard cover.</description>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
	<thingClass>VanillaBooksExpanded.Book</thingClass>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
		<MaxHitPoints>100</MaxHitPoints>
		<MarketValue>160</MarketValue>
		<Mass>0.5</Mass>
		<Beauty>5</Beauty>
		<Flammability>1.0</Flammability>
    </statBases>
    <stackLimit>1</stackLimit>
    <thingCategories>
      <li>VBE_Books</li>
    </thingCategories>
    <inspectorTabs>
      <li>VanillaBooksExpanded.ITab_Book</li>
    </inspectorTabs>
    <tradeTags>
      <li>Art</li>
    </tradeTags>
    <costList>
		<Cloth>80</Cloth>
    </costList>
    <recipeMaker>
      <workSpeedStat>ResearchSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <unfinishedThingDef>VBE_UnfinishedBook</unfinishedThingDef>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>VBE_WritersTable</li>
		<li>VBE_TypewritersTable</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>
  
  <ThingDef ParentName="VBE_BookBase">
    <defName>VBE_BookShooting</defName>
    <label>book shooting</label>
    <graphicData>
      <texPath>Things/Item/BookShooting</texPath>
    </graphicData>
    <comps>
		<li Class="VanillaBooksExpanded.CompProperties_Book">
			<nameMaker>VBE_NamerBookShooting</nameMaker>
			<descriptionMaker>VBE_BookDescription_Shooting</descriptionMaker>
			<minQualityForArtistic>Poor</minQualityForArtistic>
			<bookData>
				<skillToTeach>Shooting</skillToTeach>
				<readingEffecter>VBE_ReadingShootingBookEffecter</readingEffecter>
				<baseGainedXPper1Tick>10</baseGainedXPper1Tick>
				<Awful>0.1</Awful>
				<Poor>0.5</Poor>
				<Normal>1</Normal>
				<Good>1.2</Good>
				<Excellent>1.4</Excellent>
				<Masterwork>1.8</Masterwork>
				<Legendary>2</Legendary>
			</bookData>
		</li>
		<li>
			<compClass>CompQuality</compClass>
		</li>
    </comps>
  </ThingDef>
  
