<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>VBE_Newspaper</defName>
    <label>newspaper</label>
    <description>A perishable newspaper. Reading it will provide colonists with joy.</description>
    <graphicData>
      <texPath>Things/Item/Newspaper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
	<tickerType>Normal</tickerType>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
		<MaxHitPoints>20</MaxHitPoints>
		<WorkToMake>3340</WorkToMake>
		<Mass>0.1</Mass>
		<Beauty>-1</Beauty>
		<Flammability>1.0</Flammability>
        <DeteriorationRate>30</DeteriorationRate>
    </statBases>
    <stackLimit>1</stackLimit>
    <comps>
		<li Class="VanillaBooksExpanded.CompProperties_Book">
			<nameMaker>ArtDescription_Newspaper</nameMaker>
			<descriptionMaker>ArtDescription_NewspaperDesc</descriptionMaker>
			<minQualityForArtistic>Poor</minQualityForArtistic>
			<bookData>
				<skillToTeach>Shooting</skillToTeach>
				<readingEffecter>VBE_ReadingNewspaperEffecter</readingEffecter>
				<baseGainedXPper1Tick>10</baseGainedXPper1Tick>
				<Awful>0.1</Awful>
				<Poor>0.3</Poor>
				<Normal>0.5</Normal>
				<Good>0.8</Good>
				<Excellent>1.0</Excellent>
				<Masterwork>1.5</Masterwork>
				<Legendary>2</Legendary>
			</bookData>
		</li>
		<li>
			<compClass>CompQuality</compClass>
		</li>
    </comps>
    <thingCategories>
      <li>VBE_Books</li>
    </thingCategories>
    <inspectorTabs>
      <li>VanillaBooksExpanded.ITab_Book</li>
    </inspectorTabs>
    <tradeability>Buyable</tradeability>
    <tradeTags>
      <li>Book</li>
    </tradeTags>
    <costList>
		<WoodLog>10</WoodLog>
    </costList>
    <recipeMaker>
      <workSpeedStat>ResearchSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <unfinishedThingDef>VBE_UnfinishedNewspaper</unfinishedThingDef>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
		<li>VBE_TypewritersTable</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

</Defs>
